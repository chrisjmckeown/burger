<div class="row">
  <div class="col40">
    <h2 class="burger-label">Eat ME!</h2>
    <ul class="burger-list">
      {{#each burgers}}
      {{#unless devoured}}
      {{> burger-block devoured=true}}
      {{/unless}}
      {{/each}}
    </ul>
  </div>
  <div class="col40">
    <h2 class="burger-label">Devoured!</h2>
    <ul class="burger-list">
      {{#each burgers}}
      {{#if devoured}}
      {{> burger-block devoured=false}}
      {{/if}}
      {{/each}}
    </ul>
  </div>
</div>
<div class="row">
  <div class="col40">
    <h2>Add a Burger</h2>
    <form class="burger-create">

      <div class="form-group name">
        <label for="burger_name">Burger Name:</label>
        <input type="text" id="burger_name" class="burger_name" name="name">
      </div>

      <div class="form-group">
        <label for="devoured">Devoured?</label>

        <div class="row">
          <div class="col40">
            <input type="radio" class="radio" name="devoured" value="0" checked> Ready to eat
          </div>
          <div class="col40">
            <input type="radio" name="devoured" value="1"> Devoured!
          </div>
        </div>
      </div>

      <button class="burger-add" type="submit">Add Burger</button>
    </form>

    <button class="burger-delete-all">Delete all</button>
  </div>
</div>